        else:
            send "{@prefix} &cPlugin DiscordSRV nen√≠ nainstalov√°n nebo nen√≠ naƒçten!"

# P≈ô√≠kaz pro darov√°n√≠ ≈æivot≈Ø a odbanov√°n√≠ hr√°ƒçe
command /darzivotyban [<offline player>] [<integer>]:
    aliases: givelives, darovat
    usage: /darzivotyban <hr√°ƒç> <poƒçet ≈æivot≈Ø>
    trigger:
        if arg-1 is set:
            if arg-2 is set:
                # Kontrola zda hr√°ƒç m√° dostatek ≈æivot≈Ø na darov√°n√≠
                if {lives::%player's uuid%} >= arg-2:
                    # Kontrola zda c√≠lov√Ω hr√°ƒç je zabanovan√Ω
                    set {_target} to arg-1
                    set {_isBanned} to false
                    
                    # Opraven√Ω zp≈Øsob kontroly, zda je hr√°ƒç zabanovan√Ω (bez pou≈æit√≠ store result)
                    execute console command "banlist"
                    # Jednoduch√° kontrola - pokud hr√°ƒç nen√≠ online a m√° 0 ≈æivot≈Ø, pova≈æujeme ho za zabanovan√©ho
                    if {lives::%{_target}'s uuid%} is 0:
                        if {_target} is offline:
                            set {_isBanned} to true
                    
                    if {_isBanned} is true:
                        # Hr√°ƒç je zabanovan√Ω, pokraƒçujeme
                        # Odeƒçteme ≈æivoty d√°rci
                        remove arg-2 from {lives::%player's uuid%}
                        
                        # P≈ôid√°me ≈æivoty p≈ô√≠jemci
                        add arg-2 to {lives::%{_target}'s uuid%}
                        if {lives::%{_target}'s uuid%} > 3:
                            set {lives::%{_target}'s uuid%} to 3
                        
                        # Unban hr√°ƒçe
                        execute console command "pardon %{_target}%"
                        
                        # Ozn√°men√≠ v≈°em hr√°ƒç≈Øm
                        broadcast "{@prefix} &a%player% &edaroval &a%arg-2% &e≈æivot≈Ø hr√°ƒçi &a%{_target}% &ea pomohl mu t√≠m zru≈°it ban!"
                        
                        # Aktualizace tab listu d√°rce
                        updateTabList(player)
                        
                        # Discord ozn√°men√≠
                        set {_discordLoaded} to false
                        loop all plugins:
                            if loop-value is "DiscordSRV":
                                set {_discordLoaded} to true
                        
                        if {_discordLoaded} is true:
                            set {_discordMessage} to "üíñ **%player%** daroval %arg-2% ≈æivot≈Ø hr√°ƒçi **%{_target}%** a pomohl mu zru≈°it ban! üîì"
                            execute console command "discord broadcast #server-bany %{_discordMessage}%"
                    else:
                        send "{@prefix} &cHr√°ƒç %{_target}% nen√≠ zabanovan√Ω! Nem≈Ø≈æe≈° mu darovat ≈æivoty pro zru≈°en√≠ banu."
                else:
                    send "{@prefix} &cNem√°≈° dostatek ≈æivot≈Ø! Aktu√°lnƒõ m√°≈° &4%{lives::%player's uuid%}% &c≈æivot≈Ø."
            else:
                send "{@prefix} &cMus√≠≈° zadat poƒçet ≈æivot≈Ø, kter√© chce≈° darovat! (max. 3)"
        else:
            send "{@prefix} &cMus√≠≈° zadat jm√©no hr√°ƒçe, kter√©mu chce≈° darovat ≈æivoty!"

# P≈ô√≠kaz pro darov√°n√≠ ≈æivot≈Ø (bez odbanov√°n√≠)
command /darzivotyhraci [<player>] [<integer>]:
    aliases: givelivesplayer, darovat_zivoty
    usage: /darzivotyhraci <hr√°ƒç> <poƒçet ≈æivot≈Ø>
    trigger:
        if arg-1 is set:
            if arg-2 is set:
                # Kontrola zda hr√°ƒç m√° dostatek ≈æivot≈Ø na darov√°n√≠
                if {lives::%player's uuid%} >= arg-2:
                    if arg-2 > 0:
                        # Kontrola zda c√≠lov√Ω hr√°ƒç pot≈ôebuje ≈æivoty
                        if {lives::%arg-1's uuid%} < 3:
                            # Odeƒçteme ≈æivoty d√°rci
                            remove arg-2 from {lives::%player's uuid%}
                            
                            # P≈ôid√°me ≈æivoty p≈ô√≠jemci (max. do 3)
                            set {_oldLives} to {lives::%arg-1's uuid%}
                            add arg-2 to {lives::%arg-1's uuid%}
                            
                            if {lives::%arg-1's uuid%} > 3:
                                set {_gifted} to 3 - {_oldLives}
                                set {lives::%arg-1's uuid%} to 3
                                
                                # Opravena syntaxe pro vr√°cen√≠ p≈ôeb√Ωvaj√≠c√≠ch ≈æivot≈Ø - zmƒõna arg-2 na argument 2
                                set {_returnLives} to argument 2 - {_gifted}
                                add {_returnLives} to {lives::%player's uuid%}
                                
                                send "{@prefix} &eHr√°ƒç ji≈æ mƒõl &a%{_oldLives}% &e≈æivot≈Ø, tak≈æe jsi mu mohl darovat jen &a%{_gifted}% &e≈æivot≈Ø. Vr√°ceno: &a%{_returnLives}% &e≈æivot≈Ø."
                            else:
                                set {_gifted} to arg-2
                            
                            # Ozn√°men√≠ obƒõma hr√°ƒç≈Øm
                            send "{@prefix} &aDaroval jsi &2%{_gifted}% &a≈æivot≈Ø hr√°ƒçi &2%arg-1%&a." to player
                            send "{@prefix} &aHr√°ƒç &2%player% &ati daroval &2%{_gifted}% &a≈æivot≈Ø!" to arg-1
                            
                            # Aktualizace tab list≈Ø
                            updateTabList(player)
                            updateTabList(arg-1)
                            
                            # Zvukov√Ω efekt
                            play sound "entity.player.levelup" with volume 1 and pitch 1.5 at player's location for player
                            play sound "entity.player.levelup" with volume 1 and pitch 1.5 at arg-1's location for arg-1
                        else:
                            send "{@prefix} &cHr√°ƒç %arg-1% ji≈æ m√° maxim√°ln√≠ poƒçet ≈æivot≈Ø (3)!"
                    else:
                        send "{@prefix} &cMus√≠≈° zadat kladn√Ω poƒçet ≈æivot≈Ø!"
                else:
                    send "{@prefix} &cNem√°≈° dostatek ≈æivot≈Ø! Aktu√°lnƒõ m√°≈° &4%{lives::%player's uuid%}% &c≈æivot≈Ø."
            else:
                send "{@prefix} &cMus√≠≈° zadat poƒçet ≈æivot≈Ø, kter√© chce≈° darovat!"
        else:
            send "{@prefix} &cMus√≠≈° zadat jm√©no hr√°ƒçe, kter√©mu chce≈° darovat ≈æivoty!"

# Aktualizace v≈°ech hr√°ƒç≈Ø p≈ôi naƒçten√≠ skriptu
on skript load:
